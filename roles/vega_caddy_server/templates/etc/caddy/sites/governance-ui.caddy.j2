{{- vega_caddy_server_governance_ui_domains | map('ansible.builtin.regex_replace', '$', ':443') | join(', ') }} {
    root * /var/www/governance
    encode gzip

    {% if vega_caddy_server_geoblocking_enabled|default(false) %}
    import geoblocking
    {% endif %}

    file_server {
        hide .git
        index index.html
    }

    handle_errors {
            rewrite * /index.html
            file_server
    }
}
